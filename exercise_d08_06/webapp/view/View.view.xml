<mvc:View controllerName="cl4studentinformation.exercised0806.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page"
        title="{i18n>title}">
        <content>
            <List id = "student"
                headerText="{i18n>studentInformation}"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{student>/student}">
                <items>
                    <ObjectListItem core:require="{Formatter: 'cl4studentinformation/exercised0806/model/formatter'}"
                        

                        id = "stdentInfo"
                        title="{student>name}"
                        number="{parts: [{ path: 'student>birthdate'}], formatter: 'Formatter.formatDate.bind($controller)'}"
                        icon="{= ${student>gender} === 'ë‚¨' ? 'sap-icon://male' : 'sap-icon://female' }">

                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
