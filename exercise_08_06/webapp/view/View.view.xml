<mvc:View controllerName="studentprogram.exercise0806.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="page"
        title="{i18n>title}">
        <content>
            <List id = "student"
                headerText="{i18n>studentInformation}"
                class="sapUiResponsiveMargin"
                width="auto"
                items="{student>/student}">
                <items>
                    <ObjectListItem core:require="{Formatter: 'studentprogram/exercise0806/model/formatter'}"
                        
                        id = "stdentInfo"
                        title="{student>name}"
                        number="{= Formatter.formatDate(${student>birthdate}) }"
                        icon="{= ${student>gender} === 'ë‚¨' ? 'sap-icon://male' : 'sap-icon://female' }">
                        <markers>
                            <ObjectMarker id="marker"
                                type= "{= Formatter.isFutureMonth(${student>birthdate}) }"/>
                        </markers>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>
